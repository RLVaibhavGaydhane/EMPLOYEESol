@model Employee_Portl.Models.Leave

@{
    ViewData["Title"] = "Delete Leave";
}

<h2>Delete Leave</h2>

<h4>Are you sure you want to delete this record?</h4>
<hr />

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Employee.FullName" class="form-label">Employee</label>
        <input class="form-control" value="@Model.Employee.FullName" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Start Date</label>
        <input class="form-control" value="@Model.StartDate" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">End Date</label>
        <input class="form-control" value="@Model.EndDate" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label">Reason</label>
        <textarea class="form-control" disabled>@Model.Reason</textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label">Status</label>
        <input class="form-control" value="@Model.Status" disabled />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
