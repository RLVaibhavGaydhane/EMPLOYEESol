@page
@model RegisterModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-4">
        <div class="row pt-4">
            <div class="col-12 text-center">
                @if (User.IsInRole(SD.AdminRole))
                {
                    <h2 class="py-2 text-dark">Register-ADMIN PORTAL</h2>
                }
                else
                {
                    <h2 class="py-2 text-dark">Register</h2>
                }
            </div>
        </div>
    </div>

</div>
<div class="card-body p-4">
    <div class="row pt-3">
        <div class="col-md-12">
            <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Create a new account.</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.FullName" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Input.FullName" class="ms-2 text-muted">FullName</label>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 col-md-12">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="ms-2 text-muted">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                @* <div class="form-floating mb-3 col-md-6">
                    <select asp-for="Input.Role" asp-items="Model.Input.RoleList" class="form-select">
                        <option value="">--Select Role--</option>
                    </select>
                </div> *@


                @if (User.IsInRole(SD.AdminRole))
                {
                    <div class="form-floating mb-3 col-md-6">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected>--Select Role--</option>
                        </select>
                    </div>
                    

                }




                <div class="col-12">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    <script>
        function toggleDepartment() {
            var selectedRole = document.getElementById("roleDropdown").value;
            var deptSection = document.getElementById("departmentSection");
            deptSection.style.display = (selectedRole === "Employee") ? "block" : "none";
        }

        document.getElementById("roleDropdown").addEventListener("change", toggleDepartment);
        toggleDepartment(); // run on page load
    </script>

    <partial name="_ValidationScriptsPartial" />
}