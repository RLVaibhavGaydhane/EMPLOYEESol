@{
    ViewData["Title"] = "Welcome - Employee Portal";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f7fa;
            color: #333;
        }

        header {
            background: linear-gradient(to right, #007bff, #00c6ff);
            color: white;
            padding: 20px 50px;
            text-align: center;
        }

        .hero {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 60px 50px;
            background: white;
            border-bottom: 3px solid #007bff;
        }

        .hero-text {
            max-width: 50%;
        }

        .hero-text h1 {
            font-size: 2.8rem;
            margin-bottom: 20px;
            color: #007bff;
        }

        .hero-text p {
            font-size: 1.2rem;
            margin-bottom: 25px;
        }

        .btn-primary {
            background: #007bff;
            color: white;
            padding: 12px 25px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: background 0.3s;
        }

        .btn-primary:hover {
            background: #0056b3;
        }

        .hero img {
            max-width: 400px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .about {
            padding: 50px;
            text-align: center;
        }

        .about h2 {
            color: #007bff;
            margin-bottom: 20px;
        }

        .about p {
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.6;
            font-size: 1.1rem;
        }

        footer {
            background: #222;
            color: #aaa;
            padding: 15px;
            text-align: center;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <h2>Employee Portal</h2>
    </header>

    <section class="hero">
        <div class="hero-text">
            <h1>Welcome to Our Employee Portal</h1>
            <p>Manage your employees, track attendance, assign roles, and streamline your company’s workflow — all in one place.</p>
            <a href="/Identity/Account/Login" class="btn-primary">Get Started</a>
        </div>
        <img src="data:image/jpeg;base64," alt="Company Team" />
    </section>

    <section class="about">
        <h2>About Our Company</h2>
        <p>
            At <strong>ABC Solutions Pvt. Ltd.</strong>, we believe employees are the heart of our success.
            This portal helps us connect, collaborate, and grow together.
            With features like employee management, HR tools, and role-based access,
            our portal ensures efficiency and transparency across all departments.
        </p>
    </section>

    <footer>
        &copy; @DateTime.Now.Year - Employee Portal | Designed with ❤️
    </footer>
</body>
</html>
