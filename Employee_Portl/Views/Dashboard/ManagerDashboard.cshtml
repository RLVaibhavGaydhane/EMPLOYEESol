@{
    ViewData["Title"] = "Manager Dashboard";
    Layout = "_Layout"; // keep shared header & footer
}

<div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>👨‍💼 Manager</h2>
        <a href="#">🏠 Overview</a>
        <a href="#">👥 Team</a>
        <a href="#">📂 Projects</a>
        <a href="#">📑 Leave Approvals</a>
        <a href="#">📊 Reports</a>
        <a href="#">⚙ Settings</a>
        <a href="/Identity/Account/Logout">🚪 Logout</a>
    </div>

    <!-- Main content -->
    <div class="main">
        <!-- Welcome Bar -->
        <div class="topbar">
            <h1>Welcome, Manager @User.Identity?.Name!</h1>
            <div class="user-info">
                @DateTime.Now.ToString("dddd, dd MMM yyyy")
            </div>
        </div>

        <!-- Manager Cards -->
        <div class="cards">
            <div class="card">
                <h3>Total Employees</h3>
                <p>120</p>
            </div>
            <div class="card">
                <h3>Active Projects</h3>
                <p>15</p>
            </div>
            <div class="card">
                <h3>Pending Leaves</h3>
                <p>5 Requests</p>
            </div>
            <div class="card">
                <h3>Attendance</h3>
                <p>92% Today</p>
            </div>
        </div>

        <!-- Team Performance -->
        <div class="activity-section">
            <h2>👥 Team Performance</h2>
            <table class="activity-table">
                <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Project</th>
                        <th>Tasks Completed</th>
                        <th>Attendance</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>John Smith</td>
                        <td>Project Alpha</td>
                        <td>18 / 20</td>
                        <td><span class="status success">95%</span></td>
                    </tr>
                    <tr>
                        <td>Emily Brown</td>
                        <td>Project Beta</td>
                        <td>12 / 15</td>
                        <td><span class="status success">90%</span></td>
                    </tr>
                    <tr>
                        <td>Michael Lee</td>
                        <td>Project Gamma</td>
                        <td>8 / 10</td>
                        <td><span class="status pending">85%</span></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Pending Approvals -->
        <div class="activity-section">
            <h2>📑 Pending Leave Requests</h2>
            <table class="activity-table">
                <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Date</th>
                        <th>Reason</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Sarah Johnson</td>
                        <td>28 Aug 2025</td>
                        <td>Medical</td>
                        <td><span class="status pending">Pending</span></td>
                    </tr>
                    <tr>
                        <td>David Miller</td>
                        <td>30 Aug 2025</td>
                        <td>Family Event</td>
                        <td><span class="status pending">Pending</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: #f4f6f9;
        }

        .dashboard-container {
            display: flex;
            min-height: calc(100vh - 120px); /* header+footer space */
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            background: #212529;
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            box-shadow: 2px 0 8px rgba(0,0,0,0.15);
        }

            .sidebar h2 {
                font-size: 1.4rem;
                margin-bottom: 30px;
                text-align: center;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px 14px;
                margin: 6px 0;
                border-radius: 6px;
                transition: background 0.3s;
                display: block;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        /* Main */
        .main {
            flex: 1;
            padding: 20px 40px;
        }

        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            margin-bottom: 25px;
        }

            .topbar h1 {
                font-size: 1.5rem;
                color: #17a2b8;
            }

        .user-info {
            font-size: 1rem;
            color: #555;
        }

        /* Cards */
        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 6px 16px rgba(0,0,0,0.08);
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

            .card h3 {
                font-size: 1.1rem;
                color: #17a2b8;
                margin-bottom: 8px;
            }

            .card p {
                font-size: 1rem;
                color: #333;
            }

        /* Sections */
        .activity-section {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 6px 16px rgba(0,0,0,0.08);
            margin-bottom: 25px;
        }

            .activity-section h2 {
                margin-bottom: 15px;
                font-size: 1.3rem;
                color: #17a2b8;
            }

        .activity-table {
            width: 100%;
            border-collapse: collapse;
        }

            .activity-table th, .activity-table td {
                padding: 12px 15px;
                border-bottom: 1px solid #eaeaea;
                text-align: left;
            }

            .activity-table th {
                background: #f8f9fa;
                font-weight: bold;
            }

        .status {
            padding: 4px 8px;
            border-radius: 6px;
            font-size: 0.85rem;
        }

            .status.success {
                background: #d4edda;
                color: #155724;
            }

            .status.pending {
                background: #fff3cd;
                color: #856404;
            }
    </style>
}
