        body {
            background: #f4f6f9;
        }

        .dashboard-container {
            display: flex;
            min-height: calc(100vh - 120px);
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            background: #6f42c1;
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .sidebar h2 {
            font-size: 1.4rem;
            margin-bottom: 30px;
            text-align: center;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 10px 14px;
            margin: 6px 0;
            border-radius: 6px;
            transition: background 0.3s;
            display: block;
        }

